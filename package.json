{
  "name": "with",
  "version": "1.0.0",
  "description": "coffee",
  "main": "index.js",
  "scripts": {
    "build": "npx hardhat compile",
    "test": "export TS_NODE_TRANSPILE_ONLY=1 && npx hardhat test",
    "coverage": "npx hardhat coverage --network coverage",
    "docs": "scripts/docs.sh",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint:sol": "solhint --config .solhint.json --max-warnings 0 'contracts/**/*.sol'",
    "prettier": "prettier --config .prettierrc --write '**/*.{js,sol,ts}'",
    "vertigo": "scripts/vertigo.sh",
    "analyze": "slither ./contracts",
    "deploy:goerli": "npx hardhat run --network goerli scripts/deploy.js"
  },
  "author": "yoonsung",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.14.10",
    "buidler-ethers-v5": "^0.2.3",
    "buidler-gas-reporter": "^0.1.4",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eth-gas-reporter": "^0.2.19",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.0.23",
    "hardhat": "^2.0.4",
    "hardhat-gas-reporter": "^1.0.1",
    "mocha": "^8.2.1",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-beta.1",
    "solidity-coverage": "^0.7.12",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
